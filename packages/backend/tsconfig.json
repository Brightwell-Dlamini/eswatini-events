{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
